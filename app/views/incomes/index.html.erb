<div class="page-header">
  <h1>Incomes</h1>
</div>


<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead>
    <tr class="black-white">
      <th class="text-align-center">Name</th>
      <th class="text-align-center">Amount</th>
      <th class="text-align-center">Date of expense</th>
      <th class="text-align-center">Identity Code</th>
      <th class="text-align-center">Show</th>
      <th class="text-align-center">Edit</th>
      <th class="text-align-center">Delete</th>
      <!--<th colspan="3"></th>-->
    </tr>
    </thead>
    <tbody>
    <tr>
      <% @incomes.each do |income| %>
        <tr class="<%= cycle("cycle-1", "cycle-2") -%>" align="center">
          <td><%= income.name %></td>
          <td><%= income.amount %></td>
          <td><%= income.date_of_income %></td>
          <td><%= income.code %></td>
          <td>
            <%= link_to income, class: 'btn btn-default btn-sm btn btn-info' do %>
                <span class="glyphicon glyphicon glyphicon-zoom-in"></span>
            <% end %>
          </td>
          <td>
            <%= link_to edit_income_path(income), class: 'btn btn-default btn-sm btn btn-warning' do %>
                <span class="glyphicon glyphicon-edit"></span>
            <% end %>
          </td>
          <td>
            <%= link_to income, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm btn btn-danger' do %>
                <span class="glyphicon glyphicon-remove-sign"></span>
            <% end %>

          </td>
        </tr>
    <% end %>
    </tr>
    </tbody>
  </table>
</div>

<%= link_to new_income_path, class: 'btn btn-default btn-sm btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> New Income
<% end %>
