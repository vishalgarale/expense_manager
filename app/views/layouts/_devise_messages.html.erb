<% if defined?(resource) and resource.errors.present? %>
    <div class="panel panel-danger">
      <div class="panel-heading">List of errors</div>
      <div class="panel-body">
        <ul>
          <% resource.errors.full_messages.each do |em| %>
              <li><%= em  %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>

<%= render partial: 'layouts/common_messages' %>