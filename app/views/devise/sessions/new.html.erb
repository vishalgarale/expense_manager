<div class="page-header">
    <h2>Log in</h2>
</div>

<%= render partial: 'layouts/devise_messages' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal', role: 'form'}) do |f| %>

   <div class="form-group">
     <label class="control-label col-sm-2" for="email">Email:</label>
     <div class="col-sm-4">
       <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'email', placeholder: 'Enter email' %>
     </div>
   </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="password">Password:</label>
      <div class="col-sm-4">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'email', placeholder: 'Enter password' %>
      </div>
    </div>


  <% if devise_mapping.rememberable? -%>
      <div class="col-sm-offset-2" align="left">
        <label><%= f.check_box :remember_me %> Remember me </label>
      </div>
  <% end -%>

  <div class="form-group">
     <div class="col-sm-offset-2 col-sm-4" align="center">
       <%= f.submit 'Log in', class: 'btn btn-default' %>
     </div>
  </div>

<% end %>

<%= render 'devise/shared/links' %>


