<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-horizontal', role: 'form' }) do |f| %>
  <!--< %= devise_error_messages! %>-->

    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Email:</label>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'email', placeholder: 'Enter email' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4" align="center">
        <%= f.submit 'Resend unlock instructions', class: 'btn btn-default' %>
      </div>
    </div>

<% end %>

<%= render 'devise/shared/links' %>
